<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gr.quixfer" version="1.0.0-beta" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quixfer</name>
    <description>
        Hybrid App for smart locally money management of Buxfer expenses and incomes 
    </description>
    <author email="gianluca.ragnoni@gmail.com" href="https://it.linkedin.com/in/gianlucaragnoni">
        Gianluca Ragnoni
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="false" />
    
    <platform name="android">
        <icon src="www/img/quixfer_mdpi.png" density="mdpi" />
        <icon src="www/img/quixfer_hdpi.png" density="hdpi" />
        <icon src="www/img/quixfer_xhdpi.png" density="xhdpi" />
        <icon src="www/img/quixfer_xxhdpi.png" density="xxhdpi" />
        <splash src="www/img/quixfer_hdpi_splash.png" density="hdpi"/>
    </platform>
    
    <feature name="Keyboard">
        <param name="android-package" value="IonicKeyboard" onload="true" />
    </feature>
    
    
</widget>
